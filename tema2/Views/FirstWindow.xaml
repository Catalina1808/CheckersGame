                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="btn4" Content="Statistici" HorizontalAlignment="Left" Margin="314,266,0,0" VerticalAlignment="Top" Width="125" FontFamily="MV Boli" FontSize="16" Height="29" Foreground="#FFEDD8CE" RenderTransformOrigin="0.5,0.5" Click="btn4_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF6B3415" Offset="0.311"/>
                    <GradientStop Color="#FF904B1E" Offset="0.7"/>
                </LinearGradientBrush>
            </Button.Background>
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-11.71"/>
                    <RotateTransform/>
                    <TranslateTransform X="3.835"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="btn5" Content="Despre" HorizontalAlignment="Left" Margin="329,307,0,0" VerticalAlignment="Top" Width="84" FontFamily="MV Boli" FontSize="16" Height="29" Foreground="#FFEDD8CE" RenderTransformOrigin="-0.236,1.5" Click="btn5_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF6B3415" Offset="0.311"/>
                    <GradientStop Color="#FF904B1E" Offset="0.7"/>
                </LinearGradientBrush>
            </Button.Background>
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-11.71"/>
                    <RotateTransform/>
                    <TranslateTransform X="-2.179"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
    </Grid>
</Window>
